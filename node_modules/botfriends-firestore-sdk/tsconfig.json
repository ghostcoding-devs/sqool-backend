{
  "compilerOptions": {
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "ES2018",
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "strict": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*",
    "src/index.ts",
    "exports.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
